                                        CommandParameter="{x:Static MainViewModel:EnumWork.ForaturaSemplice}"
                                        />
    <ribbon:RibbonButton Label="Maschiatura"
                                        LargeImageSource="pack://application:,,,/Images/Work/drill.png"
                                        Command="{Binding Path=NewWorkCmd}"
                                        CommandParameter="{x:Static Member=MainViewModel:EnumWork.Maschiatura}"

                                        />
    <ribbon:RibbonButton Label="Barenatura"
                                        LargeImageSource="pack://application:,,,/Images/Work/drill.png"
                                         Command="{Binding Path=NewWorkCmd}"
                                         CommandParameter="{x:Static Member=MainViewModel:EnumWork.Barenatura}"
                                        />
    <ribbon:RibbonButton Label="Lamatura"
                                        LargeImageSource="pack://application:,,,/Images/Work/drill.png"
